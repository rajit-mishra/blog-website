<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <title>blog website</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Start Exprresing Your Views</h1>
        <a href="/articles/new" class="btn btn-success">create article</a>
        <% articles.forEach(articles => { %>
         <div class="card mt-4">
              <div class="card-body">
                <h4 class="card-title"><%= articles.title %></h4>
                <div class="card-subtitle text-muted mb-2">
                    <%=articles.createdAt.toLocaleDateString()%>
                    <div class="card-text mb-2">
                        <%=articles.Description%>
                    </div>
                    <a href="articles/<%=articles.slug%>" class="btn btn-primary">Read More</a>
                    <a href="articles/edit/<%=articles.id%>" class="btn btn-info">Edit</a>
                    <form action="/articles/<%=articles.id%>?_method=DELETE"method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>

                    </form>
                </div>
              </div>
            </div>
          <% }) %>
          
    </div>
    
</body>
</html>